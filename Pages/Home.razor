            </MudTimeline>

        </MudTabPanel>

       

        <MudTabPanel Class="background-style" Icon="material-symbols-outlined/chess_pawn" Text="Hobbies">

                <MudIcon Icon="@Icons.Material.Sharp.SportsSoccer" Class="icons-style home-page-font-style" Title="Football" />
                <MudIcon Icon="@Icons.Material.Sharp.SportsTennis" Class="icons-style home-page-font-style" Title="Tennis" />
